doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/player.css')
		script(type='text/javascript' src="/scripts/openseadragon.min.js")
		script(type='text/javascript' src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
	body(id="player")
			#header
				#header-container
					a(href="//cudl.lib.cam.ac.uk", rel="nofollow", title="University of Cambridge", class="logo")
					img(src="/images/brand/sponsor_cam.png", alt="University of Cambridge logo")
			#content
				#viewer-container
					#viewer
						script(type='text/javascript').
							OpenSeadragon({
							id: "viewer",
							debugMode:  false,
							showNavigationControl: false,
							showNavigator: false,
							springStiffness: 3,
							animationTime: 0.7,
							minPixelRatio: 0.3,
							visibilityRatio: 1,
							prefixUrl: "/images/viewer/",
							tileSources: !{images}
							});
				#metadata-container
					#metadata
