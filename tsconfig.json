{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "build/dist-root/lib",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "rootDirs": ["src", "lib"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "sourceRoot": "../src"
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "integration_test/**/*"
  ]
}
